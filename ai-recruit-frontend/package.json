{
  "name": "ai-recruit-frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:recruiter": "turbo build --filter=@ai-recruit/recruiter-dashboard",
    "build:candidate": "turbo build --filter=@ai-recruit/candidate-portal",
    "preview": "turbo preview",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "recruiter:dev": "pnpm --filter @ai-recruit/recruiter-dashboard dev",
    "candidate:dev": "pnpm --filter @ai-recruit/candidate-portal dev",
    "mock:dev": "pnpm --filter @ai-recruit/mock-api dev"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.0.8",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
